{
  "$schema": "./config.schema.json",

  "server": {
    "name": "claude-prompts",
    "transport": "stdio",
    "port": 9090
  },

  "prompts": {
    "directory": "resources/prompts",
    "registerWithMcp": true
  },

  "methodologies": {
    "enabled": true,
    "dynamicToolDescriptions": true,
    "systemPromptFrequency": 3,
    "styleGuidance": true
  },

  "gates": {
    "enabled": true,
    "directory": "resources/gates",
    "methodologyGates": true
  },

  "verification": {
    "inContextAttempts": 3,
    "isolation": {
      "enabled": true,
      "maxBudget": 1.0,
      "timeout": 300,
      "permissionMode": "delegate"
    }
  },

  "versioning": {
    "enabled": true,
    "autoVersion": true,
    "maxVersions": 50
  },

  "execution": {
    "judge": true
  },

  "hooks": {
    "expandedOutput": true
  },

  "logging": {
    "level": "debug",
    "directory": "./logs"
  },

  "resources": {
    "logs": {
      "enabled": true,
      "maxEntries": 500,
      "defaultLevel": "info"
    }
  },

  "advanced": {
    "sessions": {
      "timeoutMinutes": 1440,
      "reviewTimeoutMinutes": 30,
      "cleanupIntervalMinutes": 5
    }
  }
}
