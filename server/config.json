{
  "server": {
    "name": "claude-prompts-mcp",
    "version": "1.3.0",
    "port": 9090
  },
  "prompts": {
    "file": "prompts/promptsConfig.json",
    "registerWithMcp": true
  },
  "analysis": {
    "semanticAnalysis": {
      "mode": "structural",
      "llmIntegration": {
        "enabled": false,
        "apiKey": null,
        "endpoint": null,
        "model": "gpt-4",
        "maxTokens": 1000,
        "temperature": 0.1
      }
    }
  },
  "gates": {
    "definitionsDirectory": "gates",
    "templatesDirectory": "src/gates/templates",
    "enabled": true
  },
  "frameworks": {
    "enableSystemPromptInjection": true,
    "enableMethodologyGates": true,
    "enableDynamicToolDescriptions": true,
    "systemPromptReinjectionFrequency": 2
  },
  "judge": {
    "enabled": true
  },
  "transport": "stdio",
  "logging": {
    "directory": "./logs",
    "level": "debug"
  },
  "chainSessions": {
    "sessionTimeoutMinutes": 1440,
    "reviewTimeoutMinutes": 30,
    "cleanupIntervalMinutes": 5
  }
}
