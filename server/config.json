{
  "server": {
    "name": "claude-prompts-mcp",
    "version": "1.3.0",
    "port": 9090
  },
  "versioning": {
    "enabled": true,
    "max_versions": 50,
    "auto_version": true
  },
  "prompts": {
    "directory": "resources/prompts",
    "registerWithMcp": true
  },
  "gates": {
    "enabled": true,
    "definitionsDirectory": "resources/gates",
    "enableMethodologyGates": true
  },
  "execution": {
    "judge": true
  },
  "frameworks": {
    "dynamicToolDescriptions": true,
    "injection": {
      "systemPrompt": { "enabled": true, "frequency": 2 },
      "styleGuidance": true
    }
  },
  "transport": "stdio",
  "logging": {
    "directory": "./logs",
    "level": "debug"
  },
  "chainSessions": {
    "sessionTimeoutMinutes": 1440,
    "reviewTimeoutMinutes": 30,
    "cleanupIntervalMinutes": 5
  }
}
