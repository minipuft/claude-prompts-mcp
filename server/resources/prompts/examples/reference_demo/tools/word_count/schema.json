{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "text": {
      "type": "string",
      "description": "The text to analyze"
    },
    "include_whitespace": {
      "type": "boolean",
      "description": "Whether to include whitespace in character count",
      "default": false
    }
  },
  "required": ["text"]
}
