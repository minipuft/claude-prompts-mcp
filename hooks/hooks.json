{
  "description": "Claude Prompts plugin hooks - syntax detection, chain tracking, gate reminders",
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "prompt_engine",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/gate-enforce.py",
            "name": "gate-enforce",
            "timeout": 5
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/prompt-suggest.py",
            "name": "prompt-suggest",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "prompt_engine",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/post-prompt-engine.py",
            "name": "chain-tracker",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Edit|Write|Bash",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/ralph-context-tracker.py",
            "name": "ralph-context-tracker",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/ralph-stop.py",
            "name": "ralph-stop",
            "timeout": 120
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "python3 ${CLAUDE_PLUGIN_ROOT}/hooks/pre-compact.py",
            "name": "pre-compact",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
